{% set p_include_non_serverless_index_settings = (include_non_serverless_index_settings | default(build_flavor != "serverless")) %}

{
  "settings": {
    "index.number_of_shards": {{number_of_shards | default(2)}},
    "index.number_of_replicas": {{number_of_replicas | default(0)}},
    "index.knn.algo_param.ef_search": 50,
    "knn": true,
    "index.requests.cache.enable": false,
    "index.queries.cache.enabled": false,
    "index.search.concurrent_segment_search.enabled": true
  },
  "mappings": {
    "_source": {
      "excludes": ["titleVector"]
    },
    "properties": {
      "userId": {
        "type": "keyword"
      },
      "tags": {
        "type": "keyword"
      },
      "questionId": {
        "type": "keyword"
      },
      "creationDate": {
        "type": "date"
      },
      "title": {
        "type": "text"
      },
      "titleVector": {
        "type": "knn_vector",
        "dimension": 768,
        "index": true,
        "method": {
          "name": {{ vector_index_type | default("hnsw") |tojson }},
          "engine": {{ vector_engine_type | default("nmslib") |tojson }},
          "space_type": {{ vector_space | default("cosinesimil") |tojson }},
          "parameters": {
            {% if sq_fp16 %}
            "encoder": {
              "name": "sq",
              "parameters": {
                "type": "fp16"
              }
            },
            {% endif %}
            "m": 16,
            "ef_construction": 100
          }
        }
      },
      "acceptedAnswerId": {
        "type": "keyword"
      },
      "body": {
        "type": "text"
      }
    }
  }
}
